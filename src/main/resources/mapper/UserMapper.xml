<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szxy.spdb.dao.UserDao">
    <resultMap id="UserMap" type="com.szxy.spdb.po.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>

        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getUserByname" parameterType="java.lang.String" resultMap="UserMap">
        select * from users where username=#{username}
    </select>
    <insert id="addUser" parameterType="java.lang.String">
        insert into users(name,password) values (#{0},#{1})
    </insert>
</mapper>
